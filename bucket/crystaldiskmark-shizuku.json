            "bin": [
                [
                    "DiskMark32S.exe",
                    "DiskMark-Shizuku"
                ]
            ],
            "shortcuts": [
                [
                    "DiskMark32S.exe",
                    "CrystalDiskMark (Shizuku Edition)"
                ]
            ]
        }
    },
    "persist": [
        "DiskMark32.ini",
        "DiskMark64.ini"
    ],
    "checkver": {
        "url": "https://crystalmark.info/en/download/",
        "regex": "CrystalDiskMark\\s+([\\w.]+)\\s"
    },
    "autoupdate": {
